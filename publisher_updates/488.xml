  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Conformal invariance in the long-range Ising model</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01</subfield>
    <subfield code="t">published</subfield>
