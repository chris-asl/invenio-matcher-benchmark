  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Off-diagonal ekpyrotic scenarios and equivalence of modified, massive and/or Einstein gravity</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-10</subfield>
