  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Construction and exact solution of a nonlinear quantum field model in quasi-higher dimension</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-10</subfield>
