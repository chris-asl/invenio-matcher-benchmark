  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Functoriality of the center of an algebra</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-05</subfield>
