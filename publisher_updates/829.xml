  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Thermal, chemical and spectral equilibration in heavy-ion collisions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11</subfield>
    <subfield code="t">published</subfield>
