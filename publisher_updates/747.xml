  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The geometry of supermanifolds and new supersymmetric actions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-10</subfield>
