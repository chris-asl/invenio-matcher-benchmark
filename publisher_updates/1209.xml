  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Geometric phase for neutrino propagation in magnetic field</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-10</subfield>
