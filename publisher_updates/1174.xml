  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Pair production at the edge of the QED flux tube</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-10-07</subfield>
    <subfield code="t">published</subfield>
