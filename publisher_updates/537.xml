  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Conformal correlation functions in the Brownian loop soup</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
