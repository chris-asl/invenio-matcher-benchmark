  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The radial gradient of cosmic ray intensity in the Galaxy</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-01</subfield>
