  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Quantum dissipation in a neutrino system propagating in vacuum and in matter</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-07</subfield>
