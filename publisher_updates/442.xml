  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Jet Hadronization via Recombination of Parton Showers in Vacuum and in Medium</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03-01</subfield>
