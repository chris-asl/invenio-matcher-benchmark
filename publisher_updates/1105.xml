  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Recursion operators and bi-Hamiltonian structure of the general heavenly equation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-06</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
