  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Axion dark matter induced cosmic microwave background <math altimg="si5.gif" display="inline" id="mml11" overflow="scroll"><mi>B</mi></math> modes</subfield>
  </datafield>
