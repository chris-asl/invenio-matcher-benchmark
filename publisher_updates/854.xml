  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Two components in charged particle production in heavy-ion collisions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02</subfield>
