    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Effects of static and dynamic higher-order optical modes in balanced homodyne readout for future gravitational waves detectors</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-06</subfield>
      <subfield code="t">published</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="300">
