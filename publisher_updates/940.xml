  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Towards the physical vacuum of cosmic inflation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-10</subfield>
