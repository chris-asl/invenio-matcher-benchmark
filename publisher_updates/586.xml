  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Towards precise top mass measurement at LHC</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03-04</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
