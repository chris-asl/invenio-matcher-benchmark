    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Comment on “Fermion production in a magnetic field in a de Sitter universe”</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-02-28</subfield>
