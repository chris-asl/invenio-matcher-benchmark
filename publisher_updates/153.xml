    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Determination of the neutrino mass hierarchy with a new statistical method</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-07</subfield>
      <subfield code="t">published</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="300">
