  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">CMB cold spot from inflationary feature scattering</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05</subfield>
