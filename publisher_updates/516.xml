  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The thermalization of soft modes in non-expanding isotropic quark gluon plasmas</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05</subfield>
    <subfield code="t">published</subfield>
