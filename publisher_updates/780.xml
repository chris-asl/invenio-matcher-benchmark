  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">APFELgrid : A high performance tool for parton density determinations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
    <subfield code="t">published</subfield>
