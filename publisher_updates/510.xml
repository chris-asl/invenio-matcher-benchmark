  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A note on BPS vortex bound states</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-10</subfield>
