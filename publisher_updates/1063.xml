  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On the time delay between ultra-relativistic particles</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-10</subfield>
    <subfield code="t">published</subfield>
