  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Initial conditions for the Galileon dark energy</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
    <subfield code="t">published</subfield>
