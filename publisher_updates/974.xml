  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Convexity at finite temperature and non-extensive thermodynamics</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09</subfield>
    <subfield code="t">published</subfield>
