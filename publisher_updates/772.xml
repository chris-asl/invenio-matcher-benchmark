  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Darboux–Bäcklund transformations, dressing &amp; impurities in multi-component NLS</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05</subfield>
    <subfield code="t">published</subfield>
