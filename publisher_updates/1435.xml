  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Inclusive breakup of three-fragment weakly bound nuclei</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-10</subfield>
    <subfield code="t">published</subfield>
