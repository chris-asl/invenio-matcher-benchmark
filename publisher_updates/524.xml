  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Lagrangian and Hamiltonian structures in an integrable hierarchy and space–time duality</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
