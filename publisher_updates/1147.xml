  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Magnetic field devices for neutron spin transport and manipulation in precise neutron spin rotation measurements</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05-11</subfield>
