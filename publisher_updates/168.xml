    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Thermodynamics of regular accelerating black holes</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-06</subfield>
      <subfield code="t">published</subfield>
