  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Reheating of the Universe as holographic thermalization</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-10</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
