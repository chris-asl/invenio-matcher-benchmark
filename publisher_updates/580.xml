  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Elastic photonuclear cross sections for bremsstrahlung from relativistic ions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-04-01</subfield>
