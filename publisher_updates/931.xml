  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Born–Infeld condensate as a possible origin of neutrino masses and dark energy</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-10</subfield>
    <subfield code="t">published</subfield>
