  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Maximal Abelian gauge and a generalized BRST transformation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-10</subfield>
