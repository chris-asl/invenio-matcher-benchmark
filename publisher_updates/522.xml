  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">S 3 symmetry and the quark mixing matrix</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-10</subfield>
