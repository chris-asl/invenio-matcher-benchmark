  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Parametric signal amplification to create a stiff optical bar</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-05</subfield>
