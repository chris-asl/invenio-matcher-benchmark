  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Entanglement entropy from the truncated conformal space</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-10</subfield>
