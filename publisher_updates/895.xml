  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Wave diffraction by a cosmic string</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-26</subfield>
    <subfield code="t">published</subfield>
