  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">O' R inflation in F -term supergravity</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03-21</subfield>
    <subfield code="t">published</subfield>
