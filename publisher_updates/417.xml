  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Canonical and symplectic analysis for three dimensional gravity without dynamics</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
