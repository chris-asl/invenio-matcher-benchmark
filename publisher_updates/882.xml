  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Quantum critical points in tunneling junction of topological superconductor and topological insulator</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-26</subfield>
    <subfield code="t">published</subfield>
