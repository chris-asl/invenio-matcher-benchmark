  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Vacuum decay in CFT and the Riemann–Hilbert problem</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06</subfield>
