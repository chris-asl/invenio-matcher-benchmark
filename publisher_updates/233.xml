    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Constraints on small-field axion inflation</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-14</subfield>
      <subfield code="t">published</subfield>
