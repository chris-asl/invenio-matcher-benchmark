  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Domain wall equations, Hessian of superpotential, and Bogomol'nyi bounds</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
