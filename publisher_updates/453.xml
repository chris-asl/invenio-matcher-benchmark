  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Photon and dilepton production from a non-equilibrium quark-gluon plasma</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03-01</subfield>
