  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Beta spectrum of unique first-forbidden decays as a novel test for fundamental symmetries</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-10</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
