  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Gravitational mass of relativistic matter and antimatter</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-17</subfield>
