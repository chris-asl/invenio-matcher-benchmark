  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">CFT duals for accelerating black holes</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-10</subfield>
