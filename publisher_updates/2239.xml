  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">In search of a pristine signal for (scale-)chiral symmetry in nuclei</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-01-10</subfield>
