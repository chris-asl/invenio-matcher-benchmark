  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Dimensional reduction in momentum space and scale-invariant cosmological fluctuations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2013-11-20</subfield>
