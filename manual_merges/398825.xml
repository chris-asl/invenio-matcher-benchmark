  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The Tolman 'antitelephone' paradox: Its solution by tachyon mechanics</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
    <subfield code="c">1995-08</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
