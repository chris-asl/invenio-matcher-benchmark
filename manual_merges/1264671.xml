  <datafield tag="246" ind1=" " ind2=" ">
    <subfield code="9">arXiv</subfield>
    <subfield code="a">Analytical relation between the Polyakov loop and Dirac eigenvalues in temporally odd-number lattice QCD</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
    <subfield code="c">2013-11-15</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
