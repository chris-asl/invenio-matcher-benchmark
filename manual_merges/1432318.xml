  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Application of the reaction matrix theory (I). The calculation of nuclear reaction matrix elements</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">1967</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
