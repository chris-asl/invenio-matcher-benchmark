  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Scaling Properties of light (anti)nuclei and (anti)hypertriton production in Au+Au collisions at $\sqrt{s_{\rm{NN}}} = 200$ GeV</subfield>
    <subfield code="9">arXiv</subfield>
  </datafield>
  <datafield tag="246" ind1=" " ind2=" ">
    <subfield code="9">arXiv</subfield>
