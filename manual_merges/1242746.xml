  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The electron-phonon interaction from fundamental local gauge symmetries in solids</subfield>
    <subfield code="9">arXiv</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
