  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Shape coexistence near the neutron number N = 20: First identification of the E0 decay from the deformed 0+(2) state in Mg-30</subfield>
  </datafield>
  <datafield tag="246" ind1=" " ind2=" ">
    <subfield code="a">Shape coexistence near the neutron number N=20: First identification of the E0 decay from the deformed 0^+_2 state in 30Mg</subfield>
    <subfield code="9">arXiv</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
    <subfield code="c">2008-08</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
