  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On the absence of an exponential bound in four-dimensional gravity</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
    <subfield code="c">1994-03</subfield>
