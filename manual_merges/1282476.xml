  <datafield tag="246" ind1=" " ind2=" ">
    <subfield code="9">arXiv</subfield>
    <subfield code="a">Dispersion relations and entropy of scalar fields in Rindler and de Sitter spaces</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
