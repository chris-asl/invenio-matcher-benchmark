  <datafield tag="246" ind1=" " ind2=" ">
    <subfield code="a">On the role of GRBs on life extinction in the Universe</subfield>
    <subfield code="9">arXiv</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
