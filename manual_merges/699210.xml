  <datafield tag="246" ind1=" " ind2=" ">
    <subfield code="a">Singular magnetic field and a new non-commutative space.</subfield>
    <subfield code="9">arXiv</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
