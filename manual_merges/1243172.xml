  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">CP and CPT Violating Parameters Determined from the Joint Decays of $C=+1$ Entangled Neutral Pseudoscalar Mesons</subfield>
    <subfield code="9">arXiv</subfield>
  </datafield>
  <datafield tag="246" ind1=" " ind2=" ">
    <subfield code="9">arXiv</subfield>
    <subfield code="a">CP and CPT Violating Parameters Determined from the Joint Decays of $C=+1$ Entangled Neutral Pseudoscalar Mesons</subfield>
  </datafield>
