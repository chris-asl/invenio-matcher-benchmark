  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Compact group selection from redshift surveys</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
    <subfield code="c">1996-07</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
