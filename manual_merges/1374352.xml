  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The potential of continuous, local atomic clock measurements for earthquake prediction and volcanology</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-05-29</subfield>
    <subfield code="t">published</subfield>
