  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">N=1 supersymmetry and superQED in Atiyah-Ward space-time</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
    <subfield code="c">1994-12</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
