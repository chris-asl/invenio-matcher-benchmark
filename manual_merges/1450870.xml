  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Microscopic optical-model analysis of α- 40 Ca elastic scattering at 104 MeV through the near/far decomposition</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">1985</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
