  <datafield tag="246" ind1=" " ind2=" ">
    <subfield code="a">Measurement of Star-Formation Rate from H-alpha in field galaxies at z=1</subfield>
    <subfield code="9">arXiv</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
