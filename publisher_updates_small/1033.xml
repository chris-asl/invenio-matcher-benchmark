  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">pQCD approach to charmonium regeneration in QGP at the LHC</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03</subfield>
