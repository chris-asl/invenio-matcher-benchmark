  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">No contact terms for the magnetic field in Lorentz- and CPT-violating electrodynamics</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
