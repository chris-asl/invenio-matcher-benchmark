  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Density waves in a system of non-interacting particles</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-07</subfield>
