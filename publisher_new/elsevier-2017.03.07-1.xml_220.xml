  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Rotational and translational considerations in kinetic impact deflection of potentially hazardous asteroids</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-01</subfield>
    <subfield code="t">published</subfield>
