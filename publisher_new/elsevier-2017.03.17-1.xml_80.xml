  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Small roots, low elements, and the weak order in Coxeter groups</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-10-01</subfield>
