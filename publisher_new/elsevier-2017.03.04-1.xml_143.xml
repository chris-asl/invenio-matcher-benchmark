  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Nonlinearly coupled dynamics of irregularities in the equatorial electrojet</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-04-01</subfield>
    <subfield code="t">published</subfield>
