  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Mie calculation of electromagnetic near-field for a multilayered sphere</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05</subfield>
