  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Implementation, capabilities, and benchmarking of Shift, a massively parallel Monte Carlo radiation transport code</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
