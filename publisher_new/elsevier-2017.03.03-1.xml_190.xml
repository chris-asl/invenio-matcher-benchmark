  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Conformation dependent magnetotransport in a single handed helical geometry</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-06</subfield>
