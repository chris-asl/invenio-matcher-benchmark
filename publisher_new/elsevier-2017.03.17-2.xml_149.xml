  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Lagrangian geometrical optics of nonadiabatic vector waves and spin particles</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-10-09</subfield>
    <subfield code="t">published</subfield>
