  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Shot noise in a toroidal carbon nanotube coupled with Majorana fermion states</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-24</subfield>
