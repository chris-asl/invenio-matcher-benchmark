  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Unsplittable coverings in the plane</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-10-22</subfield>
