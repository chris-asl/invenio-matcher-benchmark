    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">General scheme for stable single and multiatom nanomagnets according to symmetry selection rules</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-27</subfield>
      <subfield code="t">published</subfield>
