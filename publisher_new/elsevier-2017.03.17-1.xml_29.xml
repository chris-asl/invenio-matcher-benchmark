  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Methylation effect on the ohmic resistance of a poly-GC DNA-like chain</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-10-14</subfield>
