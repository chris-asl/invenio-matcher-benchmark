  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Space-dependent perfusion coefficient estimation in a 2D bioheat transfer problem</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05</subfield>
    <subfield code="t">published</subfield>
