  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Suppressing the numerical Cherenkov radiation in the Yee numerical scheme</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-15</subfield>
