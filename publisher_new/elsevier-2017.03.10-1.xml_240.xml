  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Diffusion-like recommendation with enhanced similarity of objects</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-01</subfield>
