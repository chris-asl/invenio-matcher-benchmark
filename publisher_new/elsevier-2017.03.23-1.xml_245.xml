  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A generalized model via random walks for information filtering</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-06</subfield>
    <subfield code="t">published</subfield>
