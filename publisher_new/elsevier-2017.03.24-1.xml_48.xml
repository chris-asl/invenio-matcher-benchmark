  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Feasibility study of fissile mass quantification by photofission delayed gamma rays in radioactive waste packages using MCNPX</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-12-21</subfield>
    <subfield code="t">published</subfield>
