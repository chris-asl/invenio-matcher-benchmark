  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Computationally-efficient stochastic cluster dynamics method for modeling damage accumulation in irradiated materials</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
