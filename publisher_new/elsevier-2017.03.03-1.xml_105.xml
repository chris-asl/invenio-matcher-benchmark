  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Cumulant t -expansion for strongly correlated fermions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-20</subfield>
