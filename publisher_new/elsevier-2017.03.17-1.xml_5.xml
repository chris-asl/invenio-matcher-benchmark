  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On variational and symplectic time integrators for Hamiltonian systems</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-01</subfield>
