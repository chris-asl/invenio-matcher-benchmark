  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The Gaussian radial basis function method for plasma kinetic theory</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-10-30</subfield>
