  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A novel space-based observation strategy for GEO objects based on daily pointing adjustment of multi-sensors</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
