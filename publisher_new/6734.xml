    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Two-measure theory with third-rank antisymmetric tensor for local scale symmetry breaking</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-06</subfield>
