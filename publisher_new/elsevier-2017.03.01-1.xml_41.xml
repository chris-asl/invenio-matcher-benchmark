  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Pseudo <math altimg="si13.gif" display="inline" overflow="scroll"><mi mathvariant="script">PT</mi></math> -symmetry in time periodic non-Hermitian Hamiltonians systems</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
    <subfield code="t">published</subfield>
