  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Adjoint-based sensitivity analysis for high-energy density radiative transfer using flux-limited diffusion</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
    <subfield code="t">published</subfield>
