  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Efficient finite element method for grating profile reconstruction</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
