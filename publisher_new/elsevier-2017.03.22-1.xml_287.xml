  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A paradigm for data-driven predictive modeling using field inversion and machine learning</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-15</subfield>
    <subfield code="t">published</subfield>
