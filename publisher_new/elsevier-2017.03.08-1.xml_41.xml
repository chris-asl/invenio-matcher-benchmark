  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Ab initio simulations on migration paths of interstitial oxygen in corundum</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-01</subfield>
