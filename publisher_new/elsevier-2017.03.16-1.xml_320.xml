  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">ℓ -adic GKZ hypergeometric sheaves and exponential sums</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-06</subfield>
