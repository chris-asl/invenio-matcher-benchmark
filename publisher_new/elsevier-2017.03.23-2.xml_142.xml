  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Towards effective flow simulations in realistic discrete fracture networks</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-04-01</subfield>
