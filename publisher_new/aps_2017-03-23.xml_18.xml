    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Symmetry for Flavor-Kinematics Duality from an Action</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-23</subfield>
      <subfield code="t">published</subfield>
