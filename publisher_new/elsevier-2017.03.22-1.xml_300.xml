  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Revival and robustness of Bures distance discord under decoherence channels</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-22</subfield>
    <subfield code="t">published</subfield>
