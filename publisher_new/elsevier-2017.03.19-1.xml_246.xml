  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Static arrangement of a capillary porous system (CPS): Modelling</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04</subfield>
