  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Bound states in one-dimensional acoustic parity-time-symmetric lattices for perfect sensing</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-06</subfield>
