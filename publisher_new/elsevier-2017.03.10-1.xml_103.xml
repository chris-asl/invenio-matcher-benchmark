  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Spreading in integrable and non-integrable many-body systems</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-01</subfield>
