  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A Kobayashi–Hitchin correspondence for I ± -holomorphic bundles</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
