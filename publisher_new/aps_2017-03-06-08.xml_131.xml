    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Open Systems with Error Bounds: Spin-Boson Model with Spectral Density Variations</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-07</subfield>
