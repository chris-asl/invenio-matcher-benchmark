    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Phase-space representations of symmetric informationally complete positive-operator-valued-measure fiducial states</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
