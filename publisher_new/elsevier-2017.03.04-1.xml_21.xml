  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Interface reactions between Pd thin films and SiC by thermal annealing and SHI irradiation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-15</subfield>
