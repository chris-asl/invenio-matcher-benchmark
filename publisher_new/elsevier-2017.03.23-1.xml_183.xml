  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Electronic and optical properties of O-doped MgF 2 : First-principles calculations and experiments</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-10</subfield>
    <subfield code="t">published</subfield>
