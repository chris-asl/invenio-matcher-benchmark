  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Alpha spectroscopy by the Φ25 mm×0.1 mm YAlO 3 :Ce scintillation detector under atmospheric conditions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-06-01</subfield>
