  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Data-driven probability concentration and sampling on manifold</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-15</subfield>
