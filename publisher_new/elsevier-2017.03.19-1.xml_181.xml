  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On the sensitivity of thermally and optically stimulated luminescence of α-Al 2 O 3 :C and α-Al 2 O 3 :C,Mg</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
