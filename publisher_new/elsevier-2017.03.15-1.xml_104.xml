  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Low energy radiation stability of nano-crystalline cubic Zirconia films</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-07-15</subfield>
