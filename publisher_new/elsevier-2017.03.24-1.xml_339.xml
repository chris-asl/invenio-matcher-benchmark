  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The extraction of 229 Th 3+ from a buffer-gas stopping cell</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06-01</subfield>
