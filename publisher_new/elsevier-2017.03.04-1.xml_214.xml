  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Transfer and characteristic idempotents for saturated fusion systems</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-05</subfield>
