  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Peak center and area estimation in gamma-ray energy spectra using a Mexican-hat wavelet</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-06-21</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
