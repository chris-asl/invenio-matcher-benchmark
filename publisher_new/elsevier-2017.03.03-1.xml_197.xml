  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Affordable, entropy conserving and entropy stable flux functions for the ideal MHD equations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-01</subfield>
    <subfield code="t">published</subfield>
