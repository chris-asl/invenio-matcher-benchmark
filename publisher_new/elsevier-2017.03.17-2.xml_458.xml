  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">An extension of Godunov SPH: Application to negative pressure media</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
