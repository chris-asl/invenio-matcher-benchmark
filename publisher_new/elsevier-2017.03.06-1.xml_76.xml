  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Shutdown dose-rate assessment during the replacement of in-vessel components for a fusion DEMO reactor</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03-06</subfield>
