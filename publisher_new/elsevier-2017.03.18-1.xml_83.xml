  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Symplectic exponential Runge–Kutta methods for solving nonlinear Hamiltonian systems</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-06-01</subfield>
