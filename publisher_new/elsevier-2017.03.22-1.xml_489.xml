  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Identifying multiple influential spreaders in term of the distance-based coloring</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-22</subfield>
