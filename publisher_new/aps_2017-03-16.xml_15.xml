    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Ultracold atom interferometry with pulses of variable duration</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-16</subfield>
