  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Reducing Effects of Cross-Talk in a Radio Telescope Using Walsh Modulation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-02-27</subfield>
