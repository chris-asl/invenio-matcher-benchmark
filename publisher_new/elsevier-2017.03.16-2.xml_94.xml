  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">First-principles study of sulfur atom doping and adsorption on α –Fe 2 O 3 (0001) film</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-07</subfield>
