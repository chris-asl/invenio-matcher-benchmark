  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">An efficient algorithm based on splitting for the time integration of the Schrödinger equation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
