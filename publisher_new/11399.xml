    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Probing photoinduced spin states in spin-crossover molecules with neutron scattering</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-03</subfield>
