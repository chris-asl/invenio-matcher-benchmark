  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Optimization of quantum Hamiltonian evolution: From two projection operators to local Hamiltonians</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-13</subfield>
    <subfield code="t">published</subfield>
