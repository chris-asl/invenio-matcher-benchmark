  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Localized density matrix minimization and linear-scaling algorithms</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06-15</subfield>
