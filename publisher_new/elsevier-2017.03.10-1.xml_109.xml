  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Biased random walk in spatially embedded networks with total cost constraint</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-01</subfield>
