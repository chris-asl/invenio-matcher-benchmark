  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Pattern selection and self-organization induced by random boundary initial values in a neuronal network</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-01</subfield>
