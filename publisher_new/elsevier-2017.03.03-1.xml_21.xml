  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Optically induced rotation of Rayleigh particles by vortex beams with different states of polarization</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-08</subfield>
    <subfield code="t">published</subfield>
