  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A holonomy invariant anisotropic surface energy in a Riemannian manifold</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02</subfield>
