  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Preparation of integrated multifunction Pb 3 B 10 O 16 [OH] 4 whisker by solvothermal method</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-11</subfield>
