  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Ion beam evaluation of silicon carbide membrane structures intended for particle detectors</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-15</subfield>
