  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Compact planar monopole antenna for wearable wireless applications</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
