  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Robust location of optical fiber modes via the argument principle method</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05</subfield>
    <subfield code="t">published</subfield>
