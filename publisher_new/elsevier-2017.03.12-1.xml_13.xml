  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Dynamic optimization and its relation to classical and quantum constrained systems</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-08-01</subfield>
