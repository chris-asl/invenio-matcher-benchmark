  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Upper limit for fourth harmonic of cosmic ray solar daily variation: 1963–2015</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
