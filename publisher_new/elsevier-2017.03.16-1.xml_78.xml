  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Analysis of polarization offsets observed for temperature-graded ferroelectric materials</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-04-08</subfield>
    <subfield code="t">published</subfield>
