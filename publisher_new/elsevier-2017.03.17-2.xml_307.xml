  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A geometrical imaging of the real gap between economies of China and the United States</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-08-01</subfield>
