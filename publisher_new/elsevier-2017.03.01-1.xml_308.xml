  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Modeling the variations of reflection coefficient of Earth’s lower ionosphere using very low frequency radio wave data by artificial neural network</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
