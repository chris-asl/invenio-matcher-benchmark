  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A generalized Clebsch transformation leading to a first integral of Navier–Stokes equations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-23</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
