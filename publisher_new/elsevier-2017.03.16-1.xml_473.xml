  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Investigating the domain of validity of the Gubser solution to the Boltzmann equation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11</subfield>
    <subfield code="t">published</subfield>
