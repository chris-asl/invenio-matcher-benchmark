    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Origin of the Tetragonal Ground State of Heusler Compounds</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-24</subfield>
