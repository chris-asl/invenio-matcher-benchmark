  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Gravitino problem in minimal supergravity inflation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-10</subfield>
    <subfield code="t">published</subfield>
