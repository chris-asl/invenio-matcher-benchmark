  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Weighted martingale multipliers in the non-homogeneous setting and outer measure spaces</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-05</subfield>
