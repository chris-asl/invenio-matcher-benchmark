  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Equivalence between the Energy Stable Flux Reconstruction and Filtered Discontinuous Galerkin Schemes</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-01</subfield>
