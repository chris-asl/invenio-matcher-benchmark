  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A variational Bayesian approach for inverse problems with skew-t error distributions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-15</subfield>
