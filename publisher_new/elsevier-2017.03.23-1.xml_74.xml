  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Configurational entropy of anti-de Sitter black holes</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-10</subfield>
