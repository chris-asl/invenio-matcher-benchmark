  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Plasma effects in high harmonic spectra from ultrarelativistic laser–plasma interactions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-24</subfield>
    <subfield code="t">published</subfield>
