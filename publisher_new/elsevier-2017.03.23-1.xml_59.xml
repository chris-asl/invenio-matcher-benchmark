  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">An adhesive contact mechanics formulation based on atomistically induced surface traction</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
