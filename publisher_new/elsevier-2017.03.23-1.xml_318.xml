  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A γγ collider for the 750 GeV resonant state</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-10</subfield>
    <subfield code="t">published</subfield>
