    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Probability distribution of the entanglement across a cut at an infinite-randomness fixed point</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-20</subfield>
      <subfield code="t">published</subfield>
