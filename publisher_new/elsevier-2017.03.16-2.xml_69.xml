  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Remark on a diameter bound for complete Riemannian manifolds with positive Bakry–Émery Ricci curvature</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
