    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Constructive Method for Detecting the Information Backflow of Non-Markovian Dynamics</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-24</subfield>
