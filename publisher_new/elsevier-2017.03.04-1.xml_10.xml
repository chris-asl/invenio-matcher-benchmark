  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Rationally smooth Schubert varieties and inversion hyperplane arrangements</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-05</subfield>
