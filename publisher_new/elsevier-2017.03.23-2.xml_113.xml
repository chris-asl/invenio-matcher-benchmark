  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Decoupled energy stable schemes for phase-field vesicle membrane model</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
