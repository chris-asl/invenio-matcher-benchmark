  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Calculation of the correlation coefficients between the numbers of counts (peak areas and backgrounds) obtained from gamma-ray spectra</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-12</subfield>
