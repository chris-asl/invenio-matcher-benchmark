  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Coarse Quantum Measurement: An analysis of the Stern–Gerlach experiment</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-11</subfield>
    <subfield code="t">published</subfield>
