  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Combined complex-source beam and spherical-multipole analysis for the electromagnetic probing of conical structures</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
