  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A lower bound on the Bekenstein–Hawking temperature of black holes</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-10</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
