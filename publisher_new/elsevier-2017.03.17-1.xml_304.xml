  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Induced resonance evolution of the channeling electron beam</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03-17</subfield>
