  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Role of particle masses in the magnetic field generation driven by the parity violating interaction</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-10</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
