  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Balancer effects in opinion dynamics</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-28</subfield>
    <subfield code="t">published</subfield>
