    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Equivalent realizations of reciprocal metasurfaces: Role of tangential and normal polarization</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-27</subfield>
