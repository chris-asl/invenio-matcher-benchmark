  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Running cosmological constant with observational tests</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-10</subfield>
