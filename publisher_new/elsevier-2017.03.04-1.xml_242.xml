  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Ionoluminescence analysis of glass scintillators and application to single-ion-hit real-time detection</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-15</subfield>
