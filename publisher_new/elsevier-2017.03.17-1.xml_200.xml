  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Transparency of the complex PT-symmetric potentials for coherent injection</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-05</subfield>
