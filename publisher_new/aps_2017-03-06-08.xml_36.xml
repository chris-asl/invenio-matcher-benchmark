    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Hybrid configuration mixing model for odd nuclei</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-06</subfield>
      <subfield code="t">published</subfield>
