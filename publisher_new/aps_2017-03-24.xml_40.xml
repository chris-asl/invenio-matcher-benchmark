    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Topology-driven nonlinear switching in Möbius discrete arrays</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-24</subfield>
      <subfield code="t">published</subfield>
