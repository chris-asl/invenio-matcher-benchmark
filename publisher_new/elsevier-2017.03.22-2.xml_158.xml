  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Static spherically symmetric wormholes with isotropic pressure</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06-10</subfield>
