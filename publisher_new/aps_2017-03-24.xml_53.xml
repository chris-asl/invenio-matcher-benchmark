    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Breakdown of nonlinear elasticity in stress-controlled thermal amorphous solids</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-24</subfield>
      <subfield code="t">published</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="300">
