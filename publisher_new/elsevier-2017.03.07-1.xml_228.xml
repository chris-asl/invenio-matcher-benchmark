  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Constellation design for earth observation based on the characteristics of the satellite ground track</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-01</subfield>
