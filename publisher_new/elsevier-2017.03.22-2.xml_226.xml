  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Hybrid resonance and long-time asymptotic of the solution to Maxwell's equations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-22</subfield>
