  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Electronic and optical properties of beryllium sulfide monolayer: Under stress and strain conditions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-10-14</subfield>
    <subfield code="t">published</subfield>
