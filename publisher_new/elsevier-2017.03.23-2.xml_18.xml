  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A priori grid quality estimation for high-order finite differencing</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06-15</subfield>
