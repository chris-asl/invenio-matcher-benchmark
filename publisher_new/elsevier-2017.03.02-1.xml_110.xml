  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Higgs–inflaton coupling from reheating and the metastable Universe</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-10</subfield>
    <subfield code="t">published</subfield>
