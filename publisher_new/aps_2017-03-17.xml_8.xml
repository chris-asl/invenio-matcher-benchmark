    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Dynamical stationarity as a result of sustained random growth</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-17</subfield>
      <subfield code="t">published</subfield>
