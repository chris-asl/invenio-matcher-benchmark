  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The omega-infinity limit of single spikes</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06</subfield>
