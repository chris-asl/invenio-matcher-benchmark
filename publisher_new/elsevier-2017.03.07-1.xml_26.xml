  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Scalable information inequalities for uncertainty quantification</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05-01</subfield>
