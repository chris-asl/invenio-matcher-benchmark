  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Intermittency on simultaneous observations of riometer at several Antarctic locations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-15</subfield>
