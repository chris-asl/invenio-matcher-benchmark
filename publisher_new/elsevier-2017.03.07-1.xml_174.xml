  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">First prototypes of two-tier avalanche pixel sensors for particle detection</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-02-11</subfield>
