  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Pseudo-Newtonian planar circular restricted 3-body problem</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-02-12</subfield>
