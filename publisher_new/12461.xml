  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Irreversible work versus fidelity susceptibility for infinitesimal quenches</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-28</subfield>
    <subfield code="t">published</subfield>
