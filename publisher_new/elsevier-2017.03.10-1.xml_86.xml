  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Modelling income data using two extensions of the exponential distribution</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-01</subfield>
