  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On the macroscopic quantization in mesoscopic rings and single-electron devices</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-27</subfield>
    <subfield code="t">published</subfield>
