  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The solar radio emission during the minimum between the 23–24 cycles of solar activity</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-15</subfield>
