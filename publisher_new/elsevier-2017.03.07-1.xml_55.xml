  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Background constrains of the SuperNEMO experiment for neutrinoless double beta-decay searches</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-02-11</subfield>
