  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">An adjoint view on flux consistency and strong wall boundary conditions to the Navier–Stokes equations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
