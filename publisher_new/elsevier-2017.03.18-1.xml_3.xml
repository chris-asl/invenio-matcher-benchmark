  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Pricing real estate index options under stochastic interest rates</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-08-01</subfield>
