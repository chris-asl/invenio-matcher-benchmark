    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Thermal field theory of bosonic gases with finite-range effective interaction</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-27</subfield>
      <subfield code="t">published</subfield>
