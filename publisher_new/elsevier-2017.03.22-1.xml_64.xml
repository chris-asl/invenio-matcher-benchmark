  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Yin–Yang–Zhong grid: An overset grid system for a sphere</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
