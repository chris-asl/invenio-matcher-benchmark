  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">An asymptotic preserving unified gas kinetic scheme for frequency-dependent radiative transfer equations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
