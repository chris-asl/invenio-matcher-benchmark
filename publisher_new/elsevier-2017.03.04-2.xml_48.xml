  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Operator means of probability measures and generalized Karcher equations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-05</subfield>
