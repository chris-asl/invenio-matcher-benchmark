  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Dissipative charged fluid in a magnetic field</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-10</subfield>
