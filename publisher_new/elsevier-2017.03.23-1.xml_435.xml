  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">High order expanding domain methods for the solution of Poisson's equation in infinite domains</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06-01</subfield>
