  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On the occurrence of ‘bead lightning’ phenomena in long laboratory sparks</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-22</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
