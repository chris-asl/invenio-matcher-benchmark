  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Compression of the electron repulsion integral tensor in tensor hypercontraction format with cubic scaling cost</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
