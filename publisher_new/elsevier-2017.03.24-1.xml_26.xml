  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Well-posedness and generalized plane waves simulations of a 2D mode conversion model</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-15</subfield>
    <subfield code="t">published</subfield>
