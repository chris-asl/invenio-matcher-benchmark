  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Wavelets as basis functions to represent the coarse-graining potential in multiscale coarse graining approach</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
