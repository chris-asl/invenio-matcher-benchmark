  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">NEC violation in mimetic cosmology revisited</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-10</subfield>
