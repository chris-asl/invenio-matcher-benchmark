    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Manipulating magnetic moments by superconducting currents</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-13</subfield>
