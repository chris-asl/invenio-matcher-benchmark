  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Two-color correlation between intensity fluctuations in atmospheric turbulence</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06-03</subfield>
