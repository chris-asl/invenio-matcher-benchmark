  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Moments of ϕ meson spectral functions in vacuum and nuclear matter</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-17</subfield>
