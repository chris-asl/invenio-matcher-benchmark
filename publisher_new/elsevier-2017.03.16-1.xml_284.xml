  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">One-dimensional crystal growth model on a square lattice substrate</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-26</subfield>
