  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A staggered-grid convolutional differentiator for elastic wave modelling</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
