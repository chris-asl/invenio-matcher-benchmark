  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Hydrodynamic study of edge spin-vortex excitations of fractional quantum Hall fluid</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-07-29</subfield>
    <subfield code="t">published</subfield>
