  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Morphology of open clusters NGC 1857 and Czernik 20 using clustering algorithms</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-01</subfield>
    <subfield code="t">published</subfield>
