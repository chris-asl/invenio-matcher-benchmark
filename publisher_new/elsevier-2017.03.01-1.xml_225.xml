  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Mimicking dark matter in Horndeski gravity</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-06</subfield>
