  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Asymptotic analysis of discrete schemes for non-equilibrium radiation diffusion</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-15</subfield>
