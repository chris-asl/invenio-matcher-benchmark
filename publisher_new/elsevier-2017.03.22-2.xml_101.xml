  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A semiclassical kinetic theory of Dirac particles and Thomas precession</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-10-07</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
