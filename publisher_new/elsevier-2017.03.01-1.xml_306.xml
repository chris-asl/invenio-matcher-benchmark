  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Matrix product density operators: Renormalization fixed points and boundary theories</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
