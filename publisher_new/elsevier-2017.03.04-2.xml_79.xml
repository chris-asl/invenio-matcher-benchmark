  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Local–global principle for 0-cycles on fibrations over rationally connected bases</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-07-16</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
