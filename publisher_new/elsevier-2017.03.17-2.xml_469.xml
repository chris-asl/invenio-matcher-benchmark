  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Effective cosmological constant induced by stochastic fluctuations of Newton's constant</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-10</subfield>
