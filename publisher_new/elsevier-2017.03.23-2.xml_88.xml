  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Upper bound on the center-of-mass energy of the collisional Penrose process</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-10</subfield>
