  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On the computation of viscous terms for incompressible two-phase flows with Level Set/Ghost Fluid Method</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
