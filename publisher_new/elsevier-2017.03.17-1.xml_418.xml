  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Uncertainty relations for approximation and estimation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-27</subfield>
