  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Exact complexity: The spectral decomposition of intrinsic computation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-06</subfield>
    <subfield code="t">published</subfield>
