  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Applications of the Funk–Hecke theorem to smoothing and trace estimates</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-05</subfield>
    <subfield code="t">published</subfield>
