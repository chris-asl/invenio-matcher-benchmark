  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Importance sampling variance reduction for the Fokker–Planck rarefied gas particle method</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-15</subfield>
