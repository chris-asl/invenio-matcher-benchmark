    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Effective-medium description of a metasurface composed of a periodic array of nanoantennas coupled to a metallic film</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-20</subfield>
