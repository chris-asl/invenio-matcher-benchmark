  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Determination of the effective sample thickness via radiative capture</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-01</subfield>
