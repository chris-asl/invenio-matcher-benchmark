  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The construction of arbitrary order ERKN methods based on group theory for solving oscillatory Hamiltonian systems with applications</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-10-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
