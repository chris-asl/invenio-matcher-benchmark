  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Global financial indices and twitter sentiment: A random matrix theory approach</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-01</subfield>
