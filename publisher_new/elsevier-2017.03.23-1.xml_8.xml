  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Two-dimensional characteristic boundary conditions for open boundaries in the lattice Boltzmann methods</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
    <subfield code="t">published</subfield>
