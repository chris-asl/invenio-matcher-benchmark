  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Melting behavior of mixed U–Pu oxides under oxidizing conditions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-01</subfield>
