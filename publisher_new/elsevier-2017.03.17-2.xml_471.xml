  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A unified framework for mesh refinement in random and physical space</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-10-15</subfield>
    <subfield code="t">published</subfield>
