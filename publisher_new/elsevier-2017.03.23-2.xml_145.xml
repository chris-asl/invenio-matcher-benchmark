  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Stabilization of numerical interchange in spectral-element magnetohydrodynamics</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-15</subfield>
