    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Necessary condition for incompatibility of observables in general probabilistic theories</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-22</subfield>
      <subfield code="t">published</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="300">
