  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Exact calculation of the overlap volume of spheres and mesh elements</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-04-15</subfield>
