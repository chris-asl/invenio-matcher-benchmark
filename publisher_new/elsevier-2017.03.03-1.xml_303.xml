  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Ergodic time-reversible chaos for Gibbs' canonical oscillator</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-04</subfield>
