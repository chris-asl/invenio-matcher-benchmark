  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A hybrid MD-DSMC coupling method to investigate flow characteristics of micro-devices</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
