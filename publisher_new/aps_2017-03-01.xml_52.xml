    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Spectral properties and phase diagram of correlated lattice bosons in an optical cavity within bosonic dynamical mean-field theory</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-02</subfield>
