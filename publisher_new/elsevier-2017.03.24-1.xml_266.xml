  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Inverse kinematics <math altimg="si26.gif" display="inline" overflow="scroll"><mrow><mo stretchy="false">(</mo><mi>p</mi><mtext>,</mtext><mspace width="0.25em"></mspace><mi>n</mi><mo stretchy="false">)</mo></mrow></math> reactions studies using the WINDS slow neutron detector and the SAMURAI spectrometer</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
