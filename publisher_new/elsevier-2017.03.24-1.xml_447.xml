  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">An optional focusing SELENE extension to conventional neutron guides: A case study for the ESS instrument BIFROST</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-21</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
