  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Transport properties in periodically modulated zigzag silicene nanoribbon</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-04-22</subfield>
