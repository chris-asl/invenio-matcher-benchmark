  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Baire measurable paradoxical decompositions via matchings</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-05</subfield>
