  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Electromagnetic sinc Schell-model pulses in dispersive media</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-15</subfield>
