  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The signature of a rough path: Uniqueness</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-04-30</subfield>
