    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Density-functional theory for fluid-solid and solid-solid phase transitions</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-09</subfield>
      <subfield code="t">published</subfield>
