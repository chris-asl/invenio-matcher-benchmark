  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The effect of spatial variation in potential energy on the diffusion in heterogeneous media</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-20</subfield>
    <subfield code="t">published</subfield>
