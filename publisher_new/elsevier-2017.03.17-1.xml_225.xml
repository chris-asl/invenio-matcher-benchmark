  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Beta-decay half-lives for the r-process nuclei</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03</subfield>
