  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Wavevector and energy resolution of the polarized diffuse scattering spectrometer D7</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-06-11</subfield>
