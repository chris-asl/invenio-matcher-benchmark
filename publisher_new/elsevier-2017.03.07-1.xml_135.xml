  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Simplified method for calculation of equilibrium plasma composition</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-06-15</subfield>
