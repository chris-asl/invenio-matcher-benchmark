  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Temporally asymmetric laser pulse for magnetic-field generation in plasmas</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-04-01</subfield>
    <subfield code="t">published</subfield>
