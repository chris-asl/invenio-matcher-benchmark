  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Continuous surface force based lattice Boltzmann equation method for simulating thermocapillary flow</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-05</subfield>
