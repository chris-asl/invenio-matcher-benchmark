  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Circulating persistent current and induced magnetic field in a fractal network</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-04-29</subfield>
