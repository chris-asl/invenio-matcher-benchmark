  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Handheld real-time volumetric 3-D gamma-ray imaging</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-06-11</subfield>
