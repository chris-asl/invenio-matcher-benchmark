  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Computer simulation of RBS spectra from samples with surface roughness</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-15</subfield>
