  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Spin–orbit interaction modulation by asymmetric quantum wells structure</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-06</subfield>
