    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Entanglement dynamics in quantum many-body systems</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-01</subfield>
      <subfield code="t">published</subfield>
