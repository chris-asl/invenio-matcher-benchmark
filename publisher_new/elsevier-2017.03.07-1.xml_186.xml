  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The DEPFET detector-amplifier structure for spectroscopic imaging in astronomy and for experiments at free electron lasers</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-02-11</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
