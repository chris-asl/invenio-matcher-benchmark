  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A hybrid LDG-HWENO scheme for KdV-type equations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
