  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A multiple-scale Pascal polynomial for 2D Stokes and inverse Cauchy–Stokes problems</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-01</subfield>
