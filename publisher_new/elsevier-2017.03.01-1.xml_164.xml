  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Black hole as a magnetic monopole within exponential nonlinear electrodynamics</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
    <subfield code="t">published</subfield>
