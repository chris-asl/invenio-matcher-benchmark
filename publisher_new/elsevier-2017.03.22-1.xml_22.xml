  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Wave phenomena of the Toda lattice with steplike initial data</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-11</subfield>
