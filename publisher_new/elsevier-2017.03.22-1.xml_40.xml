  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Steady and perturbed motion of a point vortex along a boundary with a circular cavity</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-22</subfield>
    <subfield code="t">published</subfield>
