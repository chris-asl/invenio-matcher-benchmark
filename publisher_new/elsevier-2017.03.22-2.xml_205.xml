  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Dependence of the surface tension on the shape of surface boundary</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-22</subfield>
