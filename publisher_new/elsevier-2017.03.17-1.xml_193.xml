  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Diffuse interface simulation of ternary fluids in contact with solid</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-15</subfield>
