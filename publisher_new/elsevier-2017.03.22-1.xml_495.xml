  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Phase transition of holographic entanglement entropy in massive gravity</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-10</subfield>
    <subfield code="t">published</subfield>
