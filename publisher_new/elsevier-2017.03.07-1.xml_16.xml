  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Thermophysical modeling of Didymos’ moon for the Asteroid Impact Mission</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
