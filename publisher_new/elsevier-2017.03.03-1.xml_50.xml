  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Encoding efficiency of suprathreshold stochastic resonance on stimulus-specific information</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-08</subfield>
    <subfield code="t">published</subfield>
