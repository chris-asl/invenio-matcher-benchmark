  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On the wave representation of hyperbolic, elliptic, and parabolic Eisenstein series</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-22</subfield>
