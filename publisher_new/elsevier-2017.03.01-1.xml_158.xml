  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Scattering matrix of arbitrary tight-binding Hamiltonians</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
