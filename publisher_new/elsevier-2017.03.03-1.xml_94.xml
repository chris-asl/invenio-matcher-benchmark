  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Modulation effect in multiphoton pair production</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05-10</subfield>
