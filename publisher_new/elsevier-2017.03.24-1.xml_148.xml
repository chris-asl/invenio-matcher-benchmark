  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">DSMC simulation of hypersonic flows using an improved SBT-TAS technique</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-15</subfield>
