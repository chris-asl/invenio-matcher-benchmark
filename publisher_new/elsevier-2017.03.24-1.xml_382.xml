  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">ALmost EXact boundary conditions for transient Schrödinger–Poisson system</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-15</subfield>
