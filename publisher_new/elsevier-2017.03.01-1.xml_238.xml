  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Radio signal anomalies detected with MEXART in 2012 during the recovery phase of geomagnetic storms</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
    <subfield code="a">10</subfield>
