    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Membrane paradigm for Einstein-Gauss-Bonnet gravity</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-22</subfield>
      <subfield code="t">published</subfield>
