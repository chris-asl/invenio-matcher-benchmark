  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Neutral beam optimisation for the spherical tokamak ST40</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04</subfield>
