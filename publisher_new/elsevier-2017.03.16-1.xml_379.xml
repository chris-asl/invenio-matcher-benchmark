  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A time-dependent neutron transport method of characteristics formulation with time derivative propagation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-15</subfield>
    <subfield code="t">published</subfield>
