  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a"><math altimg="si1.gif" display="inline" overflow="scroll"><mi mathvariant="script">N</mi><mo>=</mo><mn>2</mn><mo stretchy="false">→</mo><mn>0</mn></math> super no-scale models and moduli quantum stability</subfield>
