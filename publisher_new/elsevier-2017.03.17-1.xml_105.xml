  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Effects of faceted surface topography on high-fluence sputtering of graphite</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-01</subfield>
