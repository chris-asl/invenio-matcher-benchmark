  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Thermodynamics of Inozemtsev's elliptic spin chain</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
