  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Simplex-in-cell technique for collisionless plasma simulations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-01</subfield>
