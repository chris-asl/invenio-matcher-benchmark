  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Empirical study on social groups in pedestrian evacuation dynamics</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-06-01</subfield>
