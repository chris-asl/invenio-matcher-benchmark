  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Finite numbers of sources, particle correlations and the Color Glass Condensate</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03</subfield>
    <subfield code="t">published</subfield>
