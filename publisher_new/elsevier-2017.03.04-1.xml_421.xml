  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Stable categories of graded maximal Cohen–Macaulay modules over noncommutative quotient singularities</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
