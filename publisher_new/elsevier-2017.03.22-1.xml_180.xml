  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Domino statistics of the two-periodic Aztec diamond</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-14</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
