  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On bounded and unbounded dynamics of the Hamiltonian system for unified scalar field cosmology</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-27</subfield>
    <subfield code="t">published</subfield>
