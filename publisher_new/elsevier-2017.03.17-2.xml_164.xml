  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">An exactly solvable spherical mean-field plus extended monopole pairing model</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03</subfield>
