    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Initial process of photoluminescence dynamics of self-trapped excitons in a β-Ga2O3 single crystal</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-07</subfield>
      <subfield code="t">published</subfield>
