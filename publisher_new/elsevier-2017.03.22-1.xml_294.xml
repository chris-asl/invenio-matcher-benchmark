  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Brouillage thermique d'un gaz cohérent de fermions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03-22</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
