  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Convergence criteria for <math altimg="si1.gif" display="inline" overflow="scroll"><msub><mrow><mtext>FI</mtext></mrow><mrow><mi mathvariant="script">W</mi></mrow></msub></math> -algebras and polynomial statistics on maximal tori in type B/C</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-13</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
