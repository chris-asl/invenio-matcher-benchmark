    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Entanglement, identity, and disentanglement in two-atom spontaneous emission</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-15</subfield>
