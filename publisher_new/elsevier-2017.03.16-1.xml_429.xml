  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The swept rule for breaking the latency barrier in time advancing PDEs</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-15</subfield>
    <subfield code="t">published</subfield>
