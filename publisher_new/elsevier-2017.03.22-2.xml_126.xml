  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A Hartree–Fock study of the confined helium atom: Local and global basis set approaches</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-15</subfield>
