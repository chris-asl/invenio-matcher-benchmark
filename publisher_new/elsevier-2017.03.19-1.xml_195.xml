  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Hollow cathode vacuum arc plasma electron source for the generation of a high-current DC electron beam</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-12</subfield>
