  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Spontaneous magnetization of quark matter in the inhomogeneous chiral phase</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-17</subfield>
