  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Non-naturally reductive Einstein metrics on exceptional Lie groups</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-06</subfield>
