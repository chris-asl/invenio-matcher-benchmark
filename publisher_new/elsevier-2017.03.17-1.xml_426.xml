  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Generalized pole inflation: Hilltop, natural, and chaotic inflationary attractors</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-10</subfield>
    <subfield code="t">published</subfield>
