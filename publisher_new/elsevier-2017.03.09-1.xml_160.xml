  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Connection coefficients for classical orthogonal polynomials of several variables</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-13</subfield>
