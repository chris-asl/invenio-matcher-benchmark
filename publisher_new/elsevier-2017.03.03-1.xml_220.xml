  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Thermally induced aggregation of rigid spheres on a liquid surface</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-08</subfield>
    <subfield code="t">published</subfield>
