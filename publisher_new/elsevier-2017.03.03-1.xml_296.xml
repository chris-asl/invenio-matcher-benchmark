  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Moment expansion to the memory function for generalized Drude scattering rate</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-20</subfield>
    <subfield code="t">published</subfield>
