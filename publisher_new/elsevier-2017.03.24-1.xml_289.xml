  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On the proper treatment of grid sensitivities in continuous adjoint methods for shape optimization</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-15</subfield>
    <subfield code="t">published</subfield>
