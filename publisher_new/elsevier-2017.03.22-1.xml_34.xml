  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Fractional fermions induced by spatially varying Zeeman fields</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-15</subfield>
