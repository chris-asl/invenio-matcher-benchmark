  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Monodromy of Hamiltonian systems with complexity 1 torus actions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05</subfield>
