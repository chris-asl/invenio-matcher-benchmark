    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Leading corrections to local approximations. II. The case with turning points</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-08</subfield>
