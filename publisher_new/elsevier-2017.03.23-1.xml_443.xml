  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A novel probe of chiral restoration in nuclear medium</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-10</subfield>
