  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">New Hamiltonian constraint operator for loop quantum gravity</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-17</subfield>
