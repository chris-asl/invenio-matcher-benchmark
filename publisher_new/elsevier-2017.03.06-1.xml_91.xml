  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Effective thermal conductivity of advanced ceramic breeder pebble beds</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
