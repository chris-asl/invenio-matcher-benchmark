  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Fluorescent nuclear track images of Ag-activated phosphate glass irradiated with photons and heavy charged particles</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05-21</subfield>
    <subfield code="t">published</subfield>
