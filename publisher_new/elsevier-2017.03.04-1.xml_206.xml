  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The influence of silver-ion doping using ion implantation on the luminescence properties of Er–Yb silicate glasses</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-15</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
