  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">SAMBA: Sparse Approximation of Moment-Based Arbitrary Polynomial Chaos</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
