  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Preservation of physical properties of stochastic Maxwell equations with additive noise via stochastic multi-symplectic methods</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-01</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
