    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Optical phonons for Peierls chains with long-range Coulomb interactions</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-02-28</subfield>
