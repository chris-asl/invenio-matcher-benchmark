  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Spacetimes with vector distortion: Inflation from generalised Weyl geometry</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-05-10</subfield>
