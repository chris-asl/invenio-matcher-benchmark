  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Efficient formulation of scale separation for multi-scale modeling of interfacial flows</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-01</subfield>
