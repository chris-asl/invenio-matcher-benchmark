  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A Dual Cavity Fabry–Perot Device for High Precision Doppler Measurements in Astronomy</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-02-10</subfield>
