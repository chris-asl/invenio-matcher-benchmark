  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Extrinsic and intrinsic curvatures in thermodynamic geometry</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-10</subfield>
    <subfield code="t">published</subfield>
