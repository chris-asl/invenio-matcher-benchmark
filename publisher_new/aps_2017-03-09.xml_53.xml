    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Inflationary dynamics reconstruction via inverse-scattering theory</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-09</subfield>
      <subfield code="t">published</subfield>
