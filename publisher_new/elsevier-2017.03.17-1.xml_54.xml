  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Plateau inflation in SUGRA-MSSM</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-10</subfield>
