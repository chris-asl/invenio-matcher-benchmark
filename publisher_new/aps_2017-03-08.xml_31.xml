    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Cross Interaction Drives Stratification in Drying Film of Binary Colloidal Mixtures</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-08</subfield>
