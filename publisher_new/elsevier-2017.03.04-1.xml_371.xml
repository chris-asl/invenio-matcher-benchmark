  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On conjugacy of Cartan subalgebras in extended affine Lie algebras</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-26</subfield>
