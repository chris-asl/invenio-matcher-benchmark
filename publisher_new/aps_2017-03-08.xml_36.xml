    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Spin coefficients and gauge fixing in the Newman-Penrose formalism</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-08</subfield>
