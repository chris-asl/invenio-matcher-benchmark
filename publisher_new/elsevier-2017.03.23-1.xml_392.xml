  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Stability of Monte Carlo k -eigenvalue simulations with CMFD feedback</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-09-15</subfield>
