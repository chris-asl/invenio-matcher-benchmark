  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Extrapolation-based implicit–explicit Peer methods with optimised stability regions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05-15</subfield>
