  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Al 0.2 Ga 0.8 As X-ray photodiodes for X-ray spectroscopy</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
