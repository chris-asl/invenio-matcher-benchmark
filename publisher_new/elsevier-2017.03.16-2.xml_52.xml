  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">On the rotation-two-component Camassa–Holm system modelling the equatorial water waves</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-19</subfield>
