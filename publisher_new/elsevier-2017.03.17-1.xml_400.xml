  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Time dependence of silica optical properties during the implantation of fast hydrogen ions: Theory</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-01</subfield>
