    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Spin Polarization of Rb and Cs np P232 ( n=5 , 6) Atoms by Circularly Polarized Photoexcitation of a Transient Diatomic Molecule</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-15</subfield>
      <subfield code="t">published</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="300">
