    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Testing the Speed of Gravitational Waves over Cosmological Distances with Strong Gravitational Lensing</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-02</subfield>
