  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Discrete Riemann surfaces based on quadrilateral cellular decompositions</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-30</subfield>
