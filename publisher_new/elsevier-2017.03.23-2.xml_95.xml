  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">A time domain sampling method for inverse acoustic scattering problems</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-06-01</subfield>
