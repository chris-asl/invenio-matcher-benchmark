  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Controlling bulk Reynolds number and bulk temperature in channel flow simulations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-15</subfield>
