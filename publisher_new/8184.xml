 <datafield tag="245" ind1=" " ind2=" ">
  <subfield code="a">Representations of the Dirac Equation in 1+1 Dimensions</subfield>
  <subfield code="9">Sociedade Brasileira de Física</subfield>
 </datafield>
 <datafield tag="041" ind1=" " ind2=" ">
