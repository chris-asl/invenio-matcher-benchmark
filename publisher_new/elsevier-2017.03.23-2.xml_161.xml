  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Residual-driven online generalized multiscale finite element methods</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
