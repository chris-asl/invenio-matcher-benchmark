  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Parametric resonance of intrinsic localized modes in coupled cantilever arrays</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-19</subfield>
