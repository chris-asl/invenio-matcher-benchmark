  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">First-principles study on codoping effect to enhance photocatalytic activity of anatase TiO 2</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11-28</subfield>
