  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Cosmological implications of quantum entanglement in the multiverse</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-17</subfield>
