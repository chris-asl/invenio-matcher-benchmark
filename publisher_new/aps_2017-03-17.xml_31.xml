    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Quantum behavior of terahertz photoconductivity in silicon nanocrystals networks</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-17</subfield>
