  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Portable x-ray fluorescence for the analysis of chromium in nail and nail clippings</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
