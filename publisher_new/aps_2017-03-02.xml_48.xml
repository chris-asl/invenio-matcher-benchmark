    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Two-component dark-bright solitons in three-dimensional atomic Bose-Einstein condensates</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-03</subfield>
      <subfield code="t">published</subfield>
