  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Calculation of the ambient dose equivalent H*(10) from gamma-ray spectra obtained with scintillation detectors</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-12</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
