  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Superposition of fiber Bragg and LPG gratings for embedded strain measurement</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-11</subfield>
    <subfield code="t">published</subfield>
