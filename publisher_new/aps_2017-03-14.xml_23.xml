    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Parallelized Vlasov-Fokker-Planck solver for desktop personal computers</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-14</subfield>
      <subfield code="t">published</subfield>
