    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Dispersion relation for electromagnetic propagation in stochastic dielectric and magnetic helical photonic crystals</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-21</subfield>
      <subfield code="t">published</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="300">
