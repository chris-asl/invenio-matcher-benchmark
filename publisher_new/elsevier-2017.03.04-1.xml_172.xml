  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Generalized translation invariant valuations and the polytope algebra</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-02-26</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
