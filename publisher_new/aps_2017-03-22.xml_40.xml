    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Programmable holographic technique for implementing unitary and nonunitary transformations</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-22</subfield>
      <subfield code="t">published</subfield>
