    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Geometric Explanation of Anomalous Finite-Size Scaling in High Dimensions</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-13</subfield>
