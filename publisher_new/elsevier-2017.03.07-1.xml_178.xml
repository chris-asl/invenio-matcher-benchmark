  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Analytical decoupling techniques for fully implicit reservoir simulation</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05-01</subfield>
