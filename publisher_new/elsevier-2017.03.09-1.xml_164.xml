  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">The Strip Silicon Photo-Multiplier: An innovation for enhanced time and position measurement</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-05-01</subfield>
