  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Comparison of deterministic and stochastic methods for time-dependent Wigner simulations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-11-01</subfield>
