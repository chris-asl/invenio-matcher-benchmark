  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Frequency dependence of optical third-harmonic generation from doped graphene</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-01-08</subfield>
