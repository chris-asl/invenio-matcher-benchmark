  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Monte Carlo simulation for calculation of fragments produced by 400 MeV/u carbon ion beam in water</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-01</subfield>
