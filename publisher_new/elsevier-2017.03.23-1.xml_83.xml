  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Computing jump conditions for the immersed interface method using triangular meshes</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
    <subfield code="t">published</subfield>
