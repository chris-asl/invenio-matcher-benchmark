  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">In-air ion beam analysis with high spatial resolution proton microbeam</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-03-15</subfield>
