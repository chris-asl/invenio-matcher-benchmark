    <datafield ind1=" " ind2=" " tag="245">
      <subfield code="a">Efficient approach to the free energy of crystals via Monte Carlo simulations: Application to continuous and orientation-dependent potentials</subfield>
    </datafield>
    <datafield ind1=" " ind2=" " tag="260">
      <subfield code="c">2017-03-27</subfield>
      <subfield code="t">published</subfield>
