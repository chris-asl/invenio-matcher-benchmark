  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Effects of thermal annealing on photoluminescence of Si + /C + implanted SiO 2 films</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-04-01</subfield>
    <subfield code="t">published</subfield>
