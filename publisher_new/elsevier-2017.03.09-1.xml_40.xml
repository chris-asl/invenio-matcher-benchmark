  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Global small solutions to the compressible 2D magnetohydrodynamic system without magnetic diffusion</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-04-13</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
