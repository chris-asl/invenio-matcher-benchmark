  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Comprehensive utilization of Panzhihua ilmenite concentrate by vacuum carbothermic reduction</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
